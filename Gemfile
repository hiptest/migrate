source 'https://rubygems.org'

ruby '>=2.3.1'

group :development do
  gem 'activesupport'
  gem 'colorize'
end

group :development, :test do
  gem 'nokogiri'
  gem 'pry-byebug'
end

group :test do
  gem 'rack-test'
  gem 'rspec'
  gem 'webmock'
  gem 'saharspec'
  gem 'rspec_junit_formatter', git: 'https://github.com/circleci/rspec_junit_formatter.git'
end
